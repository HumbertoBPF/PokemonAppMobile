<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/score_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Date of the battle"/>
        
        <TextView
            android:id="@+id/score_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/score_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Score value"/>

        <TextView
            android:id="@+id/score_game_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/score_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Game mode"/>

        <TextView
            android:id="@+id/player_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/trace"
            app:layout_constraintTop_toBottomOf="@id/score_game_mode"
            android:text="@string/player_team_label"/>

        <TextView
            android:id="@+id/player_pokemon_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/player_team"
            app:layout_constraintEnd_toEndOf="@id/player_team"
            app:layout_constraintTop_toBottomOf="@id/player_team"
            tools:text="Pokemon 1"/>

        <TextView
            android:id="@+id/player_pokemon_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/player_team"
            app:layout_constraintEnd_toEndOf="@id/player_team"
            app:layout_constraintTop_toBottomOf="@id/player_pokemon_1"
            tools:text="Pokemon 2"/>

        <TextView
            android:id="@+id/player_pokemon_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/player_team"
            app:layout_constraintEnd_toEndOf="@id/player_team"
            app:layout_constraintTop_toBottomOf="@id/player_pokemon_2"
            tools:text="Pokemon 3"/>

        <TextView
            android:id="@+id/player_pokemon_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/player_team"
            app:layout_constraintEnd_toEndOf="@id/player_team"
            app:layout_constraintTop_toBottomOf="@id/player_pokemon_3"
            tools:text="Pokemon 4"/>

        <TextView
            android:id="@+id/player_pokemon_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/player_team"
            app:layout_constraintEnd_toEndOf="@id/player_team"
            app:layout_constraintTop_toBottomOf="@id/player_pokemon_4"
            tools:text="Pokemon 5"/>

        <TextView
            android:id="@+id/player_pokemon_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/player_team"
            app:layout_constraintEnd_toEndOf="@id/player_team"
            app:layout_constraintTop_toBottomOf="@id/player_pokemon_5"
            tools:text="Pokemon 6"/>

        <View
            android:id="@+id/trace"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@android:color/tab_indicator_text"
            app:layout_constraintTop_toBottomOf="@id/score_game_mode"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/cpu_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/trace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/score_game_mode"
            android:text="@string/cpu_team_label"/>

        <TextView
            android:id="@+id/cpu_pokemon_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/cpu_team"
            app:layout_constraintEnd_toEndOf="@id/cpu_team"
            app:layout_constraintTop_toBottomOf="@id/cpu_team"
            tools:text="Pokemon 1"/>

        <TextView
            android:id="@+id/cpu_pokemon_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/cpu_team"
            app:layout_constraintEnd_toEndOf="@id/cpu_team"
            app:layout_constraintTop_toBottomOf="@id/cpu_pokemon_1"
            tools:text="Pokemon 2"/>

        <TextView
            android:id="@+id/cpu_pokemon_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/cpu_team"
            app:layout_constraintEnd_toEndOf="@id/cpu_team"
            app:layout_constraintTop_toBottomOf="@id/cpu_pokemon_2"
            tools:text="Pokemon 3"/>

        <TextView
            android:id="@+id/cpu_pokemon_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/cpu_team"
            app:layout_constraintEnd_toEndOf="@id/cpu_team"
            app:layout_constraintTop_toBottomOf="@id/cpu_pokemon_3"
            tools:text="Pokemon 4"/>

        <TextView
            android:id="@+id/cpu_pokemon_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/cpu_team"
            app:layout_constraintEnd_toEndOf="@id/cpu_team"
            app:layout_constraintTop_toBottomOf="@id/cpu_pokemon_4"
            tools:text="Pokemon 5"/>

        <TextView
            android:id="@+id/cpu_pokemon_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/cpu_team"
            app:layout_constraintEnd_toEndOf="@id/cpu_team"
            app:layout_constraintTop_toBottomOf="@id/cpu_pokemon_5"
            tools:text="Pokemon 6"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.cardview.widget.CardView>